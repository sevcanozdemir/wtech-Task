@model Twitter.Model.Entities.User
    @{
        ViewData["Title"] = "Twitter'a Giriş Yap /Twitter";
        Layout = null;
    }

    <html>
    <head>
        <title></title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </head>
    <body>
        <div class="container-fluid">
            <div class="row justify-content-center">
                <form asp-controller="Account" asp-action="Login">
                    <div class="form-group">
                        <img src="/img/login.png" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Telefon, E-posta veya Kullanıcı Adı" asp-for="Email" />
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="şifre" asp-for="Password" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" style="width: 340px;
                            border-radius:20px; color: white;">
                            Giriş yap
                        </button>
                    </div>
                <a asp-controller="Account" asp-action="SignUp">SignUp</a>
                </form>
            </div>
        </div>
    </body>
    </html>

